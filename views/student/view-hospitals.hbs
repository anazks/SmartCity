<link rel='stylesheet' href='/stylesheets/user.css' />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    body {
        background: linear-gradient(to right, #9D50BB, #6E48AA);
    }
</style>

<nav class="navbar navbar-light bg-light mb-5 d-flex justify-content-space-between">
    <h1 class="ms-3">Hospitals</h1>
    <a class="btn-danger me-5 p-2" href="/" style="text-decoration: none;">Back</a>
</nav>

<div class="container library">
    <div class="row">
        {{#if hospitals}}
        {{#each hospitals}}
        <div class="col-4">
            <div class="card p-2">
                <img src="/images/hospital/{{_id}}.jpg" class="image">
                <div class="container">
                    <h4><b>{{hospitalName}}</b></h4>
                    <h6>{{description}} </h6>
                    <h6>{{place}}</h6>
                     <a href="//api.whatsapp.com/send?phone=${{{phone}}}&text=Hai Travel Globez" style="text-decoration: none;"> <i class="fa fa-whatsapp" style="font-size:20px;color:green"></i>{{phone}}</a>
                    <h6></h6>
                    <a href="mailto:${{{email}}}"> {{email}}</a>

                    <h6></h6>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <center>
            <h1 style="color:white; transform:scale(1.2);transition:all 0.5s ease;">No Hospitals Found !!!!</h1>
        </center>
        {{/if}}
    </div>
</div>