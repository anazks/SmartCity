<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #bdc3c7, #2c3e50);
    }
</style>

<div class="login-page" style="width: 80vw">
    <div class="form">
        <div style="display: flex;justify-content: space-between;margin-bottom:15px">
            <a href="/admin"><button style="background: rgb(206, 16, 16);"> Back</button></a>
            <h2 class="title" style="color: #2c3e50;"> Jobs List</h2>
            <a href="/admin/add-job"><button> Add New job</button></a>
        </div>
        <table id="main_table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Company</th>
                    <th>Vacancy</th>
                    <th>Email</th>
                    <th>Place</th>
                    <th>operations</th>
                </tr>
            </thead>
            <tbody>
                {{#each jobs}}
                <tr>
                    <td>{{jobName}}</td>
                    <td>{{companyName}} </td>
                    <td>{{vacancy}}</td>
                    <td>{{email}}</td>
                    <td>{{place}}</td>
                    <td><a href="/admin/delete-job/{{_id}}"
                            onclick="return confirm('Are you sure you want to delete this job?');"><button class="btn"
                                style="background: red;">delete</button></a>
                        <a href="/admin/edit-job/{{_id}}"><button class="btn"
                                style="background: rgb(62, 128, 204);">Edit</button></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<script>
    $(function () {
        $("#main_table").dataTable();
    });
</script>