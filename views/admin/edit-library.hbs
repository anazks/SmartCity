<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #bdc3c7, #2c3e50);
    }
</style>

<div class="login-page" style="width: 80vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Edit Library Details</h2>
        </div>
        <form class="login-form" action="/admin/edit-library/{{library._id}}" method="post"
            enctype="multipart/form-data">
            <input type="text" name="libraryName" placeholder="library Name" value="{{library.libraryName}}" required />
            <textarea name="description" placeholder="Short description about library" id="" cols="10" rows="5"
                required> {{library.description}}"</textarea>
            <input type="text" name="time" placeholder="Open timings" value="{{library.time}}" required />
            <input type="text" name="place" placeholder="place" value="{{library.place}}" required />
            <input type="text" name="phone" placeholder="Phone No" value="{{library.phone}}" required />
            <input type="email" name="email" placeholder="Email Id" value="{{library.email}}" required />
            <label for="">Update Library Image</label>
            <img src="/images/library/{{library._id}}.jpg" width="100" height="100" alt="">
            <input type="file" accept="" name="image">

            <button type="submit" style="background: #00c3ff;">SUBMIT</button>
            <a href="/admin/view-all-libraries" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>