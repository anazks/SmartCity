<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #bdc3c7, #2c3e50);
    }
</style>

<div class="login-page" style="width: 70vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Add New Theater</h2>
        </div>
        <form class="login-form" action="/admin/add-theater" method="post" enctype="multipart/form-data">
            <input type="text" name="theaterName" placeholder="theater Name" required />
            <textarea name="description" placeholder="Short description about theater" id="" cols="10" rows="5"
                required></textarea>
            <input type="text" name="place" placeholder="place" required />
            <input type="text" name="showTimes" placeholder="Enter Show timings" required />
            <input type="number" name="totalSeats" placeholder="Enter Total seats Capacity" required />
            <input type="number" name="minPrice" placeholder="Minimum Ticket price" required />
            <input type="number" name="phone" placeholder="Phone No" required />
            <input type="email" name="email" placeholder="Email Id" required />
            <label for="">Upload Theater Image</label>
            <input type="file" accept="" name="image" required>

            <button type="submit" style="background: #00c3ff;">SUBMIT</button>
            <a href="/admin" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>