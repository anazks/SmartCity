<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #bdc3c7, #2c3e50);
    }
</style>

<div class="login-page" style="width: 80vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Edit college Details</h2>
        </div>
        <form class="login-form" action="/admin/edit-college/{{college._id}}" method="post"
            enctype="multipart/form-data">
            <input type="text" name="collegeName" placeholder="college Name" value="{{college.collegeName}}" required />
            <textarea name="description" placeholder="Short description about college" id="" cols="10" rows="5"
                required> {{college.description}}"</textarea>
            <input type="text" name="place" placeholder="place" value="{{college.place}}" required />
            <input type="text" name="phone" placeholder="Phone No" value="{{college.phone}}" required />
            <input type="email" name="email" placeholder="Email Id" value="{{college.email}}" required />
            <label for="">Update College Image</label>
            <img src="/images/college/{{college._id}}.jpg" width="100" height="100" alt="">
            <input type="file" accept="" name="image">

            <button type="submit" style="background: #00c3ff;">SUBMIT</button>
            <a href="/admin" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>