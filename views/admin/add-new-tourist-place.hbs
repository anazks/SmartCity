<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #bdc3c7, #2c3e50);
    }
</style>

<div class="login-page" style="width: 70vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Add New Tourist Places</h2>
        </div>
        <form class="login-form" action="/admin/add-tourist" method="post" enctype="multipart/form-data">
            <input type="text" name="place" placeholder="Location Name" required />
            <input type="text" name="Price" placeholder="Price per head" required />
            <input type="number" name="phone" placeholder="guid Phone No"  pattern="[0-9]{10}" required />
            <input type="text" name="guidName" placeholder="Guid name" required />
            <label for="">Upload College Image</label>
            <input type="file" accept="" name="image" required>

            <button type="submit" style="background: #00c3ff;">SUBMIT</button>
            <a href="/admin" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>