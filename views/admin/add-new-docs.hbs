<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
    body {
        background: linear-gradient(90deg, #bdc3c7, #2c3e50);
    }
</style>

<div class="login-page" style="width: 70vw;">
    <div class="form">
        <div>
            <h2 class="title" style="color: #2c3e50;">Add New Document</h2>
        </div>
        <form class="login-form" action="/admin/addDocs" method="post" enctype="multipart/form-data">
            <input type="text" name="DocsName" placeholder="Docs Name" required />
            <textarea name="description" placeholder="Short description about Documents" id="" cols="10" rows="5"
                required></textarea>
            <input type="text" name="subject" placeholder="uploaded by" required />
            <input type="file" name="doc">
            <button type="submit" style="background: #00c3ff;">SUBMIT</button>
            <a href="/admin" class="font-weight-bold" style="text-decoration: none;">Back</a>
        </form>
    </div>
</div>